<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_profile"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="center"
                android:src="@drawable/frame" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_interest"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_get_connect_token"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="Connect Token"
                android:gravity="center"
                android:background="@drawable/selector_btn_gray"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_get_access_token"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:background="@drawable/selector_btn_white"
                android:text="Access Token"
                android:gravity="center"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_get_sns_id"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:background="@drawable/selector_btn_gray"
                android:text="SNS ID"
                android:gravity="center"
                android:textSize="18sp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_get_login_type"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="Login Type"
                android:gravity="center"
                android:background="@drawable/selector_btn_white"
                android:textSize="18sp" />
            
            <Button
                android:id="@+id/btn_get_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="Name"
                android:gravity="center"
                android:background="@drawable/selector_btn_gray"
                android:textSize="18sp" />
            
            <Button
                android:id="@+id/btn_get_profile_url"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="Profile URL"
                android:gravity="center"
                android:background="@drawable/selector_btn_white"
                android:textSize="18sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_profile_update"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="Profile Update"
                android:gravity="center"
                android:background="@drawable/selector_btn_gray"
                android:textSize="18sp" />
            
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="Logout"
                android:gravity="center"
                android:background="@drawable/selector_btn_white"
                android:textSize="18sp" />
            
			<Button                
                android:id="@+id/btn_unregist"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="Leave"
                android:gravity="center"
                android:background="@drawable/selector_btn_gray"
                android:textSize="18sp" />
			
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >
            
            <Button                
                android:id="@+id/btn_push_on"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="PushOn"
                android:gravity="center"
                android:background="@drawable/selector_btn_white"
                android:textSize="18sp" />
            
           <Button
                android:id="@+id/btn_push_off"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="PushOff"
                android:gravity="center"
                android:background="@drawable/selector_btn_gray"
                android:textSize="18sp" />
           
          <Button                
                android:id="@+id/btn_get_email"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#333"
                android:text="Email"
                android:gravity="center"
                android:background="@drawable/selector_btn_white"
                android:textSize="18sp" />
        </LinearLayout>
        
        
    </LinearLayout>

</LinearLayout>